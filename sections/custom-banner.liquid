<section class="custom-banner">
  <!-- ===== HERO: background only ===== -->
  <div
    class="banner-hero"
    style="
      background-image:
        {% if section.settings.background_image != blank %}
          url('{{ section.settings.background_image | image_url: width: 1440 }}')
        {% endif %};
    "
  ></div>

  <!-- ===== 38-62 SPLIT (copy first) ===== -->
  <div class="banner-split">
    <!-- 38 % COPY (left) -->
    <div class="split-copy">
      <h2 class="banner-headline">{{ section.settings.headline }}</h2>
      <p  class="banner-description">{{ section.settings.description }}</p>
      <button class="cta secondary">{{ section.settings.shop_text }} â†’</button>
    </div>

    <!-- 62 % IMAGE (right) -->
    <div
      class="split-img"
      style="
        background-image:
          {% if section.settings.background_image != blank %}
            url('{{ section.settings.background_image | image_url: width: 1600 }}')
          {% endif %};
      "
    ></div>
  </div>

  <!-- ===== FOOTER ===== -->
  <div class="banner-footer">
    <p>{{ section.settings.bottom_text }}</p>
  </div>
</section>

<style>
:root{ --banner-h: 300px; }

.custom-banner{display:flex;flex-direction:column;width:100%;}

/* ----- HERO ----- */
.banner-hero{
  width:100%;min-height:var(--banner-h);
  background-size:cover;background-position:center bottom;
}

/* ----- SPLIT ----- */
.banner-split{display:flex;width:100%;min-height:var(--banner-h);}

.split-copy{
  flex:0 0 38%;
  display:flex;flex-direction:column;justify-content:center;
  padding:0 5%;
}

.split-img{
  flex:0 0 62%;
  background-position:left top;
}

.banner-headline{font-size:3rem;font-weight:700;margin-bottom:1rem;}
.banner-description{font-size:1rem;line-height:1.5;margin-bottom:1.5rem;}

/* button */
.cta.secondary{
  max-width:200px;
  padding:.75rem 1.5rem;border:none;cursor:pointer;color:#fff;background:#000;
  background-image:linear-gradient(to right,#ffd700 0 0);
  background-size:0% 100%;background-repeat:no-repeat;
  transition:background-size .35s,color .3s;
}
.cta.secondary:hover{background-size:100% 100%;color:#000;}

/* ----- FOOTER ----- */
.banner-footer{
  text-align:center;padding:.8rem;font-size:.8rem;
  background:#f8f8f8;border-top:1px solid #ddd;
}

/* ----- MOBILE STACK ----- */
@media(max-width:768px){
  .banner-split{flex-direction:column;min-height:auto;}
  .split-img{flex:0 0 100%;height:55vw;}
  .split-copy{flex:0 0 100%;padding:2rem 1rem;text-align:center;}
  .cta.secondary{width:100%;max-width:none;margin-top:1rem;}
  .banner-headline{font-size:1.6rem;}
  .banner-description{text-align: inherit;font-size:.9rem;display: -webkit-box; -webkit-line-clamp: 2;-webkit-box-orient: vertical; overflow: hidden; text-overflow: ellipsis;}
}
</style>

{% schema %}
{
  "name": "Custom Banner",
  "settings": [
    { "type": "text", "id": "headline", "label": "Headline", "default": "The Gift Guide" },
    { "type": "textarea", "id": "description", "label": "Description", "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season." },
    { "type": "text", "id": "shop_text", "label": "Shop Button Text", "default": "SHOP NOW" },
    { "type": "text", "id": "bottom_text", "label": "Bottom Text", "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL" },
    { "type": "image_picker", "id": "background_image", "label": "Background Image" }
  ],
  "presets": [
    { "name": "Custom Banner" }
  ]
}
{% endschema %}
